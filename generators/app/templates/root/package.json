{
  "name": "tsed-backend-base",
  "version": "1.0.0",
  "description": "Base project to create TypeScript-based Node.js backend applications.",
  "main": "server.js",
  "config": {
    "keyfile": ".pem file",
    "user": "username",
    "server": "server url",
    "deployPath": "e.g. ~/backend/"
  },
  "scripts": {
    "clean": "rimraf 'dist'",
    "prebuild": "npm run clean",
    "build": "npm run tsc",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --recursive",
    "test:lint": "tslint --project tsconfig.json",
    "test:lint:fix": "tslint --project tsconfig.json --fix",
    "tsc": "tsc --project tsconfig.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'node_modules/**/*' --exec ts-node src/server.ts --config=./server.config.json --mode=dev",
    "start": "ts-node src/server.ts --config=./server.config.json --mode=prod",
    "predeploy": "npm run build --prod",
    "deploy": "rsync -avz -e \"ssh -i $npm_package_config_keyfile\" dist $npm_package_config_user@$npm_package_config_server:$npm_package_config_deployPath",
    "postdeploy": "npm run deploy:packageJson && npm run deploy:config && npm run deploy:pm2config && npm install --prod",
    "deploy:packageJson": "rsync -avz -e \"ssh -i $npm_package_config_keyfile\" package.json $npm_package_config_user@$npm_package_config_server:$npm_package_config_deployPath",
    "deploy:config": "rsync -avz -e \"ssh -i $npm_package_config_keyfile\" server.config.json $npm_package_config_user@$npm_package_config_server:$npm_package_config_deployPath",
    "deploy:pm2config": "rsync -avz -e \"ssh -i $npm_package_config_keyfile\" ecosystem.config.js $npm_package_config_user@$npm_package_config_server:$npm_package_config_deployPath"
  },
  "private": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tsed/common": "5.9.0",
    "@tsed/core": "5.9.0",
    "@tsed/di": "5.9.0",
    "@tsed/swagger": "5.9.0",
    "@tsed/testing": "5.9.0",
    "@types/swagger-schema-official": "^2.0.15",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "concurrently": "^4.1.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "method-override": "^3.0.0",
    "passport": "^0.4.0",
    "read-json-sync": "^2.0.1",
    "rxjs": "^6.5.1",
    "ts-json-properties": "2.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cheerio": "^0.22.11",
    "@types/express": "^4.16.1",
    "@types/http-proxy": "^1.17.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "@types/request-promise": "^4.1.42",
    "@types/sinon": "^7.0.10",
    "@types/sinon-chai": "^3.2.2",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.4.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
